#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main(void)
{
	// 사용자로부터 입력받은 숫자의 하댕하는 구구단을 출력! 역순으로 출력해보기
	
	
	int n, i;
    printf("정수를 입력하시면 그 값의 구구단을 출력합니다 (나가기 : 0 ) : ");
	scanf("%d", &n);
	while (n != 0)
	{
		for (i = 9; i > 0; i--)
		{
			printf("구구단 역순 출력 : %d*%d=%d\n", n, i, n * i);
		}
		printf("숫자를 입력하세요 (나가기 : 0 ) : \n" );
		scanf("%d", &n);
		
	}
	

	system("pause");
	return 0;
}
